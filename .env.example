# Example environment configuration
# Copy to .env and adjust values as needed.

# DuckDB root directory
DUCKDB_DATA_ROOT="/path/to/duckdb_root/fluxstd_vX.Y_nside32/release/"

# hostname to run the app
PFS_APP_HOSTNAME="your-host.example.org"

# --- Fluxstd matching defaults (used by utils.py; can be overridden) ---
# DuckDB
DUCKDB_THREADS=16

# Matching / astrometry
FLUXSTD_NSIDE=32
FLUXSTD_HEALPIX_ORDER=ring
FLUXSTD_MATCH_SEPARATION_ARCSEC=1.0
FLUXSTD_PM_SNR_THRESHOLD=3.0
FLUXSTD_PARALLAX_FALLBACK_MAS=1e-7

# Quality cuts
FLUXSTD_MIN_PROB_F_STAR=0.5
FLUXSTD_MAX_PROB_F_STAR=1.0
FLUXSTD_MIN_PSF_MAG_G=17.0
FLUXSTD_MAX_PSF_MAG_G=19.0
FLUXSTD_MIN_PSF_MAG_R=17.0
FLUXSTD_MAX_PSF_MAG_R=19.0
FLUXSTD_MIN_TEFF_BRUTUS=5000.0
FLUXSTD_MAX_TEFF_BRUTUS=8000.0
FLUXSTD_MIN_TEFF_GSPPHOT=5000.0
FLUXSTD_MAX_TEFF_GSPPHOT=8000.0
